<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/fullcard"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardBackgroundColor="@color/app_theame"
        app:cardCornerRadius="@dimen/_14sdp">



            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />




                <TextView
                    android:id="@+id/palce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_19sdp"
                    android:text="National Museum"

                    android:layout_marginTop="@dimen/_140sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_17ssp"
                    android:textStyle="bold" />







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_160sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:orientation="vertical">


                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:text="price"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp" />


        </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp">
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="⭐⭐⭐⭐⭐"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />




            </LinearLayout>

            <!--            <ImageView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="@dimen/_30sdp"-->
            <!--                android:layout_gravity="center_horizontal"-->
            <!--                android:src="@drawable/like1" />-->

        <ImageView
        android:layout_width="@dimen/_20sdp"
        android:id="@+id/imgLike"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/likew"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="learn more....."
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_90sdp"
            android:id="@+id/Book"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:layout_gravity="bottom"/>
        <ImageView
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:src="@drawable/location"
            android:layout_marginTop="@dimen/_144sdp"/>

        <ImageView
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:src="@drawable/rupee"
            android:layout_marginTop="@dimen/_162sdp"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>