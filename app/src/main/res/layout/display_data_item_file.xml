<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/fullcard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_280sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="20dp"
        app:cardCornerRadius="@dimen/_20sdp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_itemfile2"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_beach"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:scaleType="centerCrop" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

<!--                <ImageView-->
<!--                    android:layout_width="30dp"-->
<!--                    android:layout_height="25dp"-->
<!--                    android:layout_marginHorizontal="10dp"-->
<!--                    android:layout_marginTop="@dimen/_5sdp"-->
<!--                    android:src="@drawable/location" />-->

                <TextView
                    android:id="@+id/txtpeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="JAY SHREE RAM"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:src="@drawable/location" />

                    <TextView
                        android:id="@+id/txtcity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Location"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/white" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/rupee" />

                <TextView
                    android:id="@+id/txtprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text="50000"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/phone" />

                <TextView
                    android:id="@+id/txtDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="10dp"
                    android:text=" 1234567 "
                    android:textColor="@color/white"
                    android:textSize="14sp" />



            </LinearLayout>

            <!--            <ImageView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="@dimen/_30sdp"-->
            <!--                android:layout_gravity="center_horizontal"-->
            <!--                android:src="@drawable/like1" />-->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Book_beach"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_12"
                android:text="Book" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⭐⭐⭐⭐⭐"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:id="@+id/imgLike"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/likew"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_95sdp"
        android:layout_marginTop="@dimen/_20sdp"
        >



    </LinearLayout>
    <TextView
        android:id="@+id/txtemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:text="Email"
        android:visibility="gone"
        android:textStyle="bold" />
</RelativeLayout>